  "version": "0.2.0",
  "configurations": [
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (simplest configuration)",
      "program": "${file}",
      "argsString": "${input:argsString}"
    }
  ],
  "inputs": [{
    "id": "argsString",
    "type": "promptString",
    "default": "a \"b c\" \\\\\\${file} \"it's\" great",
    "description": "The arguments of the script"
  }]
}
